# Mikrotik Firewall Trap Incoming PPTP Protocol

/ip firewall filter
add action=drop chain=input comment="Drop Bruteforce PPTP" disabled=no dst-port=1723 protocol=tcp src-address-list=BLACKLIST_BRUTEFORCE_PPTP connection-state=invalid
add action=add-src-to-address-list address-list=BLACKLIST_BRUTEFORCE_PPTP address-list-timeout=1d chain=input comment="Blacklist Bruteforce PPTP" disabled=no dst-port=1723 protocol=tcp src-address-list=BRUTEFORCE_PPTP_STAGE_3 connection-state=invalid
add action=add-src-to-address-list address-list=BRUTEFORCE_PPTP_STAGE_3 address-list-timeout=10m chain=input comment="Bruteforce PPTP Stage 3" disabled=no dst-port=1723 protocol=tcp src-address-list=BRUTEFORCE_PPTP_STAGE_2 connection-state=invalid
add action=add-src-to-address-list address-list=BRUTEFORCE_PPTP_STAGE_2 address-list-timeout=5m chain=input comment="Bruteforce PPTP Stage 2" disabled=no dst-port=1723 protocol=tcp src-address-list=BRUTEFORCE_PPTP_STAGE_1 connection-state=invalid
add action=add-src-to-address-list address-list=BRUTEFORCE_PPTP_STAGE_1 address-list-timeout=3m chain=input comment="Bruteforce PPTP Stage 1" disabled=no dst-port=1723 protocol=tcp connection-state=invalid
